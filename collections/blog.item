
{.section item}

  <a href="/blog" class="back-to-blog">&larr; Back to blog</a>

  <!--WRAPPER-->
  
  <article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">
    
    <!--POST TILE-->

    <h1 class="title" data-content-field="title">{title}</h1>

    <!--POST META-->
    
    <div class="meta">
      <p>Published on <strong><time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time></strong> by <a href="?author={author.id}">{author.displayName}</a>.
      {.section sourceUrl}
        <a href="{@}" class="source" target="_blank">Source</a>.
      {.end}
      </p>
      <!--SHARE AND LIKE-->
      {@|like-button}
      {@|social-button}
    </div> 

    <!--MAIN CONTENT-->

    {body}

    <!--BLOG INJECTION-->

    {postItemInjectCode}    

    <!--CATEGORIES-->

    {.repeated section categories}
      <a class="category" href="{collection.fullUrl}?category={@|url-encode}">{@}</a>{.alternates with},
    {.end}

    <!--TAGS-->

    {.repeated section tags}
      <a class="tag" href="{collection.fullUrl}?tag={@|url-encode}">{@}</a>{.alternates with},
    {.end}   

    <!--LOCATION-->

    {.section location}
      {.section addressTitle}
        {addressTitle}
        {addressLine1}
        {addressLine2}
        {addressCountry}
      {.end}
    {.end}

    <!--COMMENTS-->

    {@|comments}

  </article>

{.end}
    

<!--PAGINATION-->

{.if pagination}
  <nav>
    <ul class="pager">
      <!--NEWER PAGE-->

      {.section prevItem}
        <li class="next"><a href="{fullUrl}">Newer <span aria-hidden="true">&rarr;</span></a></li>
      {.end}

      <!--OLDER PAGE-->

      {.section nextItem}
        <li class="previous"><a href="{fullUrl}"><span aria-hidden="true">&larr;</span> Older</a></li>
      {.end}

  </nav>
{.end}