<!--ITEM LOOP-->

{.repeated section items}

  <!--WRAPPER-->
  
  <article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">

    <!--POST TILE-->

    <h1 class="title" data-content-field="title">{title}</h1>

    <!--MAIN IMAGE-->

    {.main-image?}  
      <a href="{fullUrl}" class="main-image content-fill">
        <img {@|image-meta} />
      </a>
    {.end}

    <!--EXCERPT OR BODY-->

    {.if excerpt}
      {excerpt}
      <a class="link" href="{fullUrl}">Read More</a>
    {.or}

      <!--MAIN CONTENT-->

      {body}

    {.end}

    <!--TEAM INJECTION-->

    {postItemInjectCode}    

  </article>

  {.or}
    No team members yet.
{.end}
