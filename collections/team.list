<!--ITEM LOOP-->

{.repeated section items}

  <!--WRAPPER-->
  
  <article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">
    <div class="row">
      <div class="col-md-4">
        <!--MAIN IMAGE-->
        {.main-image?}
          <img class="member-photo" src="{fullUrl}?format=750w" data-image-dimensions="{originalSize}" />
        {.end}
      </div>
      <div class="col-md-8">
        <!--POST TILE-->
        <h1 class="title" data-content-field="title">{title}</h1>
        <!--MAIN CONTENT-->
        {body}

          <div class="linked-in-link">
            <a href="{customContent.linkedInLink}" target="_blank">
              {customContent.linkedInText}
            </a>
          </div>

      </div>

    <!--TEAM INJECTION-->
    {postItemInjectCode}    

  </article>

  {.or}
    No team members yet.
{.end}
